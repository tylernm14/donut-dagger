.row
  .col-lg-12
    %h3.page-header Workflows
    .page-header-actions
      %a.btn.btn-default{ href: '/workflows/admin/new' }
        %span.glyphicon.glyphicon-plus
        New Workflow
.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        .panel-heading-body
          -#= form_tag '/workflows', method: 'get', id: 'filter-form',class: 'form-inline' do
          -#  .row
