      - if @workflows.count > 0
        #workflows
          #workflows-content
            %table.table.table-hover.table-striped.table-bordered
              %thead
                %tr
                  %th Status
                  %th Definition
                  %th Owner
                  %th Jobs by Status
                  %th Start Time
                  %th Elapsed Time
                  %th
                %tbody
                  - @workflows.each do |workflow|
                    = haml :'admin/workflows/_row', locals: { workflow: workflow }
      - else
        .panel-body
          .alert.alert-warning No workflows.
      .panel-footer #{@workflows.count} workflows found.

